{
    "python.analysis.extraPaths": [
        "./Mapa dos Trilhos",
        "./Mapa dos Trilhos/Linhas",
        "./Área de Desenvolvimento/Code_Mapa dos Trilhos",
        "./Mapa_dos_Trilhos",
        "./Mapa_dos_Trilhos/Linhas",
        "./Mapa_dos_Trilhos/Sobre",
        "./Mapa_dos_Trilhos/Qualidade_ar"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
    "git.enableSmartCommit": true,
    "git.autofetch": false,          // Reduz a frequência de fetch automático
    "git.autorefresh": false,        // Desativa atualização constante do status
    "git.autoRepositoryDetection": "subFolders", // Evita escanear toda a árvore de diretórios
    "git.postCommitCommand": "sync", // Sincroniza após commit (opcional)
    "git.confirmSync": false,        // Remove confirmação para push/pull
    "git.pruneOnFetch": true,        // Mantém o repositório limpo
    "git.maxFileSizeMB": 4,          // Ignora arquivos >4MB no diff
    "git.suggestSmartCommit": false   // Evita sugestões de commit se houver muitos arquivos
}